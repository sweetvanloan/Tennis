    # Ball collision with players
    if ball.colliderect(player) or ball.colliderect(opponent):
        ball_speed_x *= -1
        hit_sound.play()

    # Ball out of bounds (scoring)
    if ball.left <= 0 or ball.right >= WIDTH:
        ball_speed_x *= -1
        ball.x = WIDTH // 2 - 15
        ball.y = HEIGHT // 2 - 15
        score_sound.play()

    # ... (same as before)

    pygame.display.flip()
    clock.tick(60)

